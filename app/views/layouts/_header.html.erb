<section id="main-wrapper">
    <header>
        <div id="main-nav">
            <div class="wrapper">
                <div class="logo"><%= link_to root_url do %><%= image_tag "logo2.png" %><% end %></div>
            </div>
            <nav class="nav">
                <div class="wrapper">
                    <ul>
                        <li><%= link_to root_url do %><i class="fa fa-home"></i> Home<% end %></li>
                        <% @categories.each do |category| %>
                        <li>
                            <%= link_to category_path(category) do %><%= raw category.icon_category %> <%= category.category_name %><% end %>
                            <ul>
                                <% subcategory = Subcategory.where(:category_id => category.id) %>
                                <% n = subcategory.length %>
                                <% num = 0 %>
                                <% until num >= n %>
                                <li>
                                    <%= link_to subcategory_path(subcategory[num].id) do %><%= subcategory[num].subcategory_name %><% end %>
                                </li>
                                <% num +=1 %>
                                <% end %>
                            </ul>
                        </li>
                        <% end %>
                        <li><a href="#"><i class="fa fa-fast-forward"></i> Videos</a></li>
                        <li><a href="#"><i class="fa fa-video-camera"></i>LiveStream</a></li>
                        <li><a href="#"><span class="menu-button"><i class="fa fa-bars"></i></span></a></li>
                    </ul>         
                </div>
            </nav>
        </div>
        <div id="top-nav" >
            <div class="wrapper">
                <ul>
                    <a href="#"><li><i class="fa fa-hand-o-right"></i> About us</li></a>
                    <a href="#"><li><i class="fa fa-envelope-o"></i> Contact us</li>  </a>
                    <a href="#"><li><i class="fa fa-language"></i> Languague</li></a>   
                </ul>                
                <%= form_tag search_path, :method => 'get' do %>
                    <%= search_field_tag :q, params[:q], :size => 40, :placeholder => "Search..." %>
                <% end %>
            </div>
        </div>
        <!-- SMALL NAV -->
        <div id="top-nav-small" >
            <nav>
                <div id="q-icon"><a href="#"><i class="fa fa-search"></i>SEARCH</a></div>
                <%= form_tag search_path, :method => 'get' do %>
                    <div><input name="q" id="q-small" type="search" size="40" placeholder="Search..." /></div>
                <% end %>
                <div class="logo"><%= link_to root_url do %><%= image_tag "logo.png" %><% end %></div>
                <div id="menu-bars"><a href="#"><i class="fa fa-bars"></i></a></div>
            </nav>
        </div>
        <div id="main-nav-small">
            <div class="wrapper">
                <nav class="nav-main">
                    <ul>
                        <% @categories.each do |category| %>
                        <li>
                            <%= link_to category_path(category) do %><%= raw category.icon_category %> <%= category.category_name %><% end %>
                        </li>
                        <% end %>
                    </ul>
                </nav>
            </div>
        </div>
    </header>